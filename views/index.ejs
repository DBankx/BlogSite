<%- include('partials/header') %> 

<div class="container">
<div class="row">
    <div class="col-lg-6 col-md-6 one">
<div class="box">
    <h2><%= date %> </h2>
</div>
</div>

<div class="col-lg-6 col-md-6 sdiv">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-info btnx" data-toggle="modal" data-target="#exampleModalCenter" data-whatever="@getbootstrap"><h5><i class="fas fa-feather"></i>Compose</h5></button>
    </div>
</div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Compose a Blog</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/" method="POST">
            <div class="form-group">
              <label for="title" class="col-form-label">Title</label>
              <input type="text" name="title" class="form-control" id="recipient-name">
            </div>
            <div class="form-group">
              <label for="text" class="col-form-label">Body</label>
              <textarea class="form-control" name="text" id="message-text" rows='5'></textarea>
            </div>
            <button class="btn btn-info" type="submit" name="submit">Publish</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Main Posts -->
  <div class="container posts">
  <% posts.forEach(function (post) { %>
      <h2><%= post.postTitle %> </h2>
      <% if ((post.postText).length > 100){ %> 
      <p><%= (post.postText).slice(0, 100) %><a class="post-links" href="posts/<%=post.postTitle%>"> Read More...</a></p>
      <hr>
    <%} else {%>
        <p><%= post.postText %> </p>
        <hr>
    <%}%>
 <% })%> 
</div>

<%- include('partials/footer') %>